<div class="d-grid justify-content-center">
  <h3>Entity</h3>
  <%= link_to 'Create', new_group_entity_url, class: 'btn btn-primary btn-sm' %>
  <br>

</div>
<% @entity.each do |entity| %>
<div class="container d-flex justify-content-center">
  <div class="card mb-2" style="max-width: 540px;">
    <div class="row no-gutters">
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"> <%= entity.name %></h5>
          <p class="card-text"> <%= entity.amount %></p>
          <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
          <%= button_to 'Delete', group_entity_path(@group, entity), method: :delete, data: { confirm: 'Are you sure?' } %>

        </div>
      </div>
    </div>
  </div>
</div>
<% end %>