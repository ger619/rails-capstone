<div class="d-grid justify-content-center">
  <h3>Groups</h3>
  <%= link_to 'Create', new_group_url, class: 'btn btn-primary btn-sm' %>
  <br>

</div>
<% @group.each do |g| %>
<div class="container d-flex justify-content-center">
  <div class="card mb-3" style="max-width: 540px;">


    <div class="row no-gutters m-1">

      <div class="col-md-4 mt-1">
        <%= link_to group_path(g.id) do %>
          <%= image_tag(g.icon, size: '120x120') %>
        <% end %>
      </div>


      <div class="col-md-8">
        <div class="card-body">
          <%= link_to group_path(g.id) do %>
          <h5 class="card-title"><%= g.name %></h5>
          <% end %>
          <p class="card-text"></p>
          <p class="card-text "><small class="text-muted"> <%= g.created_at %></small> <%= button_to 'delete', g, method: :delete, class: 'btn btn-danger btn-sm' %></small></p>
        </div>
      </div>
    </div>


  </div>

</div>
<% end %>